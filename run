#!/usr/bin/env python3

import os, sys
import os.path

from utils import get_file_path

import argparse

CONTAINER_NAME = 'ctf-kujira'
COMMAND = '/bin/zsh'

def main():
    dest_path = get_file_path(f'volume')
    
    if len(sys.argv) < 2:
        args = COMMAND
    else:
        args = ' '.join(sys.argv[1:])
    
    print("run: ", args)

    path = get_file_path('')
    os.system(f'cd {path} && docker-compose run {CONTAINER_NAME} zsh -c "{args}"')

if __name__ == '__main__':
    main()
