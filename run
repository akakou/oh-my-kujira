#!/usr/bin/env python3

import os
import os.path

from utils import compose
from utils.common import get_file_path

import argparse

CONTAINER_NAME = 'my-kujira'
COMMAND = '/bin/zsh'

def main():
    parser = argparse.ArgumentParser()
    parser.add_argument('--copy', help='copy file or directory')
    args = parser.parse_args()

    if args.copy:
        dest_path = get_file_path(f'volume')
        os.system(f'sudo cp -r {args.copy} {dest_path}')

    compose.run(f'{CONTAINER_NAME} {COMMAND}')


if __name__ == '__main__':
    main()

